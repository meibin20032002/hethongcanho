<?xml version="1.0" encoding="utf-8"?>


<form>

	<fieldset name="product.form" addfieldpath="/administrator/components/com_bds/models/fields">

		<field name="title"
				alias="title"
				label="BDS_FIELD_TITLE"
				filter="STRING"
				type="cktext"
				required="true"
				class="validate[required] input-xxlarge"/>

		<field name="alias"
				alias="alias"
				label="BDS_FIELD_ALIAS"
				filter="STRING"
				type="cktext"/>

		<field name="category_id"
				alias="_category_id_title"
				label="BDS_FIELD_CATEGORY"
				filter="INT"
				listKey="id"
				labelKey="title"
				type="ckcombo"
				nullLabel="BDS_JSEARCH_SELECT_CATEGORY"
				required="true"
				class="validate[required]"/>
        
        <field name="project_id"
				alias="_project_id_title"
				label="BDS_FIELD_PROJECT"
				filter="INT"
				listKey="id"
				labelKey="title"
				type="ckcombo"
				nullLabel="BDS_JSEARCH_SELECT_PROJECT"/>
                
		<field name="types"
				alias="types"
				label="BDS_FIELD_TYPES"
				filter="STRING"
				listKey="value"
				labelKey="text"
				type="enum"
				nullLabel="BDS_JSEARCH_SELECT_TYPES"
				enum="products_types"/>

		<field name="who"
				alias="who"
				label="BDS_FIELD_WHO"
				filter="STRING"
				listKey="value"
				labelKey="text"
				type="enum"
				nullLabel="BDS_JSEARCH_SELECT_WHO"
				enum="products_who"
				required="true"
				class="validate[required]"/>

		<field name="main_location"
				alias="_main_location_title"
				label="BDS_FIELD_MAIN_LOCATION"
				filter="INT"
				listKey="id"
				labelKey="title"
				type="ckcombo"
				nullLabel="BDS_JSEARCH_SELECT_MAIN_LOCATION"
				required="true"
				class="validate[required]"/>

		<field name="gallery"
				alias="gallery"
				label="BDS_FIELD_GALLERY"
				type="subform"
                formsource="administrator/components/com_bds/models/forms/subform.xml"
                min="1" max="30" multiple="true" groupByFieldset="true"
                layout="joomla.form.field.subform.repeatable-table"
				required="true"
				class="validate[required]"/>

		<field name="price"
				alias="price"
				label="BDS_FIELD_PRICE"
				filter="INT"
				type="cktext"
				validate="numeric"
				ruleInstance="numeric_6385"
				required="true"
				class="validate[required,custom[numeric_6385]]"/>

		<field name="bedrooms"
				alias="bedrooms"
				label="BDS_FIELD_BEDROOMS"
				filter="STRING"
				listKey="value"
				labelKey="text"
				type="enum"
				nullLabel="BDS_JSEARCH_SELECT_BEDROOMS"
				enum="products_bedrooms"
				required="true"
				class="validate[required]"/>

		<field name="description"
				alias="description"
				label="BDS_FIELD_DESCRIPTION"
				filter="JComponentHelper::filterText"
                buttons="true" 
				type="editor"/>

		<field name="address"
				alias="address"
				label="BDS_FIELD_ADDRESS"
				filter="STRING"
				type="cktext"/>

		<field name="acreage"
				alias="acreage"
				label="BDS_FIELD_ACREAGE"
				filter="INT"
				type="cktext"
				validate="numeric"
				ruleInstance="numeric_2524"
				required="true"
				class="validate[required,custom[numeric_2524]]"/>

		<field name="behind"
				alias="behind"
				label="BDS_FIELD_BEHIND"
				filter="INT"
				type="cktext"
				validate="numeric"
				ruleInstance="numeric_1765"
				class="validate[custom[numeric_1765]]"/>

		<field name="direction"
				alias="direction"
				label="BDS_FIELD_DIRECTION"
				filter="STRING"
				listKey="value"
				labelKey="text"
				type="enum"
				nullLabel="BDS_JSEARCH_SELECT_DIRECTION"
				enum="products_direction"/>

		<field name="legal_documents"
				alias="legal_documents"
				label="BDS_FIELD_LEGAL_DOCUMENTS"
				filter="STRING"
				listKey="value"
				labelKey="text"
				type="enum"
				nullLabel="BDS_JSEARCH_SELECT_LEGAL_DOCUMENTS"
				enum="products_legal_documents"/>

		<field name="characteristics"
				alias="characteristics"
				label="BDS_FIELD_CHARACTERISTICS"
				filter="STRING"
				listKey="value"
				labelKey="text"
				type="enum"
				nullLabel="BDS_JSEARCH_SELECT_CHARACTERISTICS"
				enum="products_characteristics"/>

		<field name="shipping_payment"
				alias="shipping_payment"
				label="BDS_FIELD_SHIPPING_PAYMENT"
				filter="STRING"
				type="cktextarea"/>
        
        <field name="contact_number"
				alias="contact_number"
				label="BDS_FIELD_CONTACT_NUMBER"
				filter="STRING"
				type="cktext"/>

		<field name="contact_name"
				alias="contact_name"
				label="BDS_FIELD_CONTACT_NAME"
				filter="STRING"
				type="cktext"
				required="true"
				class="validate[required]"/>

		<field name="contact_email"
				alias="contact_email"
				label="BDS_FIELD_CONTACT_EMAIL"
				filter="STRING"
				type="cktext"
				validate="ckemail"
				required="true"
				class="validate[required,custom[ckemail]]"/>

		<field name="contact_address"
				alias="contact_address"
				label="BDS_FIELD_CONTACT_ADDRESS"
				filter="STRING"
				type="cktext"/>
                
		<field name="published"
				alias="published"
				label="BDS_FIELD_PUBLISHED"
				filter="INT"
				access="core.edit.state"
				listKey="value"
				default="0"
				type="ckstate">
			<option value="0" icon="icomoon-cancel" color="danger">BDS_FIELDS_BOOL_NO</option>
			<option value="1" icon="icomoon-ok" color="success">BDS_FIELDS_BOOL_YES</option>
		</field>

		<field name="modification_date"
				alias="modification_date"
				label="BDS_FIELD_MODIFICATION_DATE"
				filter="USER_UTC"
				type="calendar"
				format="%Y-%m-%d %H:%M"
				todaybutton="true"
				weeknumbers="false"
				filltable="true"
				singleheader="false"
				minyear="-100"
				maxyear="+50"
				timeformat="24"/>

		<field name="creation_date"
				alias="creation_date"
				label="BDS_FIELD_CREATION_DATE"
				filter="USER_UTC"
				type="calendar"
				format="%Y-%m-%d %H:%M"
				todaybutton="true"
				weeknumbers="false"
				filltable="true"
				singleheader="false"
				minyear="-100"
				maxyear="+50"
				timeformat="24"/>

		<field name="created_by"
				alias="_created_by_name"
				label="BDS_FIELD_CREATED_BY"
				filter="INT"
				access="core.edit"
				listKey="id"
				labelKey="name"
				type="ckcombo"
				nullLabel="BDS_JSEARCH_SELECT_CREATED_BY"/>

		<field name="modified_by"
				alias="_modified_by_name"
				label="BDS_FIELD_MODIFIED_BY"
				filter="INT"
				listKey="id"
				labelKey="name"
				type="ckcombo"
				nullLabel="BDS_JSEARCH_SELECT_MODIFIED_BY"/>
                
        <field name="hits"
				alias="hits"
				label="BDS_FIELD_HITS"
				filter="INT"
				type="text"
				validate="numeric"
				ruleInstance="numeric_2460"
                readonly="true"
				class="validate[custom[numeric_2460]]"/>
                
	</fieldset>

	<fieldset name="default.filters" addfieldpath="/administrator/components/com_bds/models/fields">

		<field name="filter_category_id"
				listKey="id"
				labelKey="title"
				type="ckcombo"
				submit="true"
				nullLabel="BDS_FILTER_NULL_CATEGORY"
				class="span-2 element-filter"
				label="BDS_JSEARCH_CATEGORY"
				ui="chosen"/>
                
        <field name="filter_project_id"
				listKey="id"
				labelKey="title"
				type="ckcombo"
				submit="true"
				nullLabel="BDS_FILTER_NULL_PROJECT"
				class="span-2 element-filter"
				label="BDS_JSEARCH_PROJECT"
				ui="chosen"/>

		<field name="filter_types"
				listKey="value"
				labelKey="text"
				type="enum"
				submit="true"
				nullLabel="BDS_FILTER_NULL_TYPE"
				enum="products_types"
				label="BDS_JSEARCH_TYPE"
				class="element-filter"
				ui="chosen"/>

		<field name="filter_main_location"
				listKey="id"
				labelKey="title"
				type="ckcombo"
				submit="true"
				nullLabel="BDS_FILTER_NULL_MAIN_LOCATION"
				class="span-2 element-filter"
				label="BDS_JSEARCH_MAIN_LOCATION"
				ui="chosen"/>

		<field name="filter_who"
				listKey="value"
				labelKey="text"
				type="enum"
				submit="true"
				nullLabel="BDS_FILTER_NULL_WHO"
				enum="products_who"
				label="BDS_JSEARCH_WHO"
				class="element-filter"
				ui="chosen"/>

		<field name="filter_bedrooms"
				listKey="value"
				labelKey="text"
				type="enum"
				submit="true"
				nullLabel="BDS_FILTER_NULL_BEDROOMS"
				enum="products_bedrooms"
				label="BDS_JSEARCH_BEDROOMS"
				class="element-filter"
				ui="chosen"/>

		<field name="filter_direction"
				listKey="value"
				labelKey="text"
				type="enum"
				submit="true"
				nullLabel="BDS_FILTER_NULL_DIRECTION"
				enum="products_direction"
				label="BDS_JSEARCH_DIRECTION"
				class="element-filter"
				ui="chosen"/>

		<field name="filter_legal_documents"
				listKey="value"
				labelKey="text"
				type="enum"
				submit="true"
				nullLabel="BDS_FILTER_NULL_LEGAL_DOCUMENTS"
				enum="products_legal_documents"
				label="BDS_JSEARCH_LEGAL_DOCUMENTS"
				class="element-filter"
				ui="chosen"/>

		<field name="filter_characteristics"
				listKey="value"
				labelKey="text"
				type="enum"
				submit="true"
				nullLabel="BDS_FILTER_NULL_CHARACTERISTICS"
				enum="products_characteristics"
				label="BDS_JSEARCH_CHARACTERISTICS"
				class="element-filter"
				ui="chosen"/>

		<field name="search_search"
				type="cksearch"
				placeholder="BDS_FILTER_NULL_TITLE_ALIAS_ADDRESS_CONTACT_NUMBER_CONTACT_NAME_CONTACT_ADDRESS"
				label="BDS_JSEARCH_TITLE_ALIAS_ADDRESS_CONTACT_NUMBER_CONTACT_NAME_CONTACT_ADDRESS"
				class="element-filter element-search search-query"
				ui="chosen"/>

		<field name="sortTable"
				type="cksort"
				responsive="hidden-phone"
				submit="true"
				nullLabel="JGLOBAL_SORT_BY"
				class="span-2 element-filter"
				label="Sort by"
				ui="chosen"/>

		<field name="directionTable"
				type="ckdirection"
				responsive="hidden-phone"
				submit="true"
				nullLabel="JFIELD_ORDERING_DESC"
				class="span-2 element-filter"
				label="Direction"
				ui="chosen"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>

	<fieldset name="modal.filters" addfieldpath="/administrator/components/com_bds/models/fields">

		<field name="limit"
				type="cklimit"
				submit="true"
				class="element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>
</form>