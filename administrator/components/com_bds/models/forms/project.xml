<?xml version="1.0" encoding="utf-8"?>


<form>

	<fieldset name="project.form" addfieldpath="/administrator/components/com_bds/models/fields">

		<field name="title"
				alias="title"
				label="BDS_FIELD_TITLE"
				filter="STRING"
				type="cktext"
				required="true"
				class="validate[required] input-xxlarge"/>

		<field name="alias"
				alias="alias"
				label="BDS_FIELD_ALIAS"
				filter="STRING"
				type="cktext"/>

		<field name="gallery"
				alias="gallery"
				label="BDS_FIELD_GALLERY"
				type="subform"
                formsource="administrator/components/com_bds/models/forms/subform.xml"
                min="1" max="30" multiple="true" groupByFieldset="true"
                layout="joomla.form.field.subform.repeatable-table"
				required="true"
				class="validate[required]"/>

		<field name="type_id"
				alias="_type_id_title"
				label="BDS_FIELD_TYPE"
				filter="INT"
				listKey="id"
				labelKey="title"
				type="ckcombo"
				nullLabel="BDS_JSEARCH_SELECT_TYPE"/>

		<field name="main_location"
				alias="_main_location_title"
				label="BDS_FIELD_MAIN_LOCATION"
				filter="INT"
				listKey="id"
				labelKey="title"
				type="ckcombo"
				nullLabel="BDS_JSEARCH_SELECT_MAIN_LOCATION"/>

		<field name="address"
				alias="address"
				label="BDS_FIELD_ADDRESS"
				filter="STRING"
				type="cktext"
				required="true"
				class="validate[required]"/>

		<field name="price_min"
				alias="price_min"
				label="BDS_FIELD_PRICE_MIN"
				filter="INT"
				type="cktext"
				validate="numeric"
				ruleInstance="numeric_3185"
				required="true"
				class="validate[required,custom[numeric_3185]]"/>

		<field name="price_max"
				alias="price_max"
				label="BDS_FIELD_PRICE_MAX"
				filter="INT"
				type="cktext"
				validate="numeric"
				ruleInstance="numeric_5397"
				required="true"
				class="validate[required,custom[numeric_5397]]"/>

		<field name="handing_over"
				alias="handing_over"
				label="BDS_FIELD_HANDING_OVER"
				filter="STRING"
				type="calendar"
				format="%Y-%m-%d"
				todaybutton="true"
				weeknumbers="false"
				filltable="true"
				singleheader="false"
				minyear="-100"
				maxyear="+50"
				showtime="false"
				required="true"
				class="validate[required]"/>

		<field name="investor"
				alias="investor"
				label="BDS_FIELD_INVESTOR"
				filter="STRING"
				type="cktext"
				required="true"
				class="validate[required]"/>

		<field name="description"
				alias="description"
				label="BDS_FIELD_DESCRIPTION"
				filter="JComponentHelper::filterText"
                buttons="true" 
				type="editor"/>

		<field name="total_area"
				alias="total_area"
				label="BDS_FIELD_TOTAL_AREA"
				filter="INT"
				type="cktext"
				validate="numeric"
				ruleInstance="numeric_7215"
				class="validate[custom[numeric_7215]]"/>

		<field name="utility_id"
				alias="_utility_id_title"
				label="BDS_FIELD_UTILITY"
				filter="INT"
				listKey="id"
				labelKey="title"
				type="ckcombo"
				nullLabel="BDS_JSEARCH_SELECT_UTILITY"/>

		<field name="model_house"
				alias="model_house"
				label="BDS_FIELD_MODEL_HOUSE"
				filter="STRING"
				type="cktextarea"/>

		<field name="construction_progress"
				alias="construction_progress"
				label="BDS_FIELD_CONSTRUCTION_PROGRESS"
				filter="STRING"
				type="cktextarea"/>

		<field name="published"
				alias="published"
				label="BDS_FIELD_PUBLISHED"
				filter="INT"
				access="core.edit.state"
				listKey="value"
				default="0"
				type="ckstate">
			<option value="0" icon="icomoon-cancel" color="danger">BDS_FIELDS_BOOL_NO</option>
			<option value="1" icon="icomoon-ok" color="success">BDS_FIELDS_BOOL_YES</option>
		</field>
        
        <field name="hits"
				alias="hits"
				label="BDS_FIELD_HITS"
				filter="INT"
				type="text"
                readonly="true"
				validate="numeric"
				ruleInstance="numeric_6555"
				class="validate[custom[numeric_6555]]"/>

		<field name="creation_date"
				alias="creation_date"
				label="BDS_FIELD_CREATION_DATE"
				filter="USER_UTC"
				type="calendar"
				format="%Y-%m-%d %H:%M"
				todaybutton="true"
				weeknumbers="false"
				filltable="true"
				singleheader="false"
				minyear="-100"
				maxyear="+50"
				timeformat="24"/>

		<field name="modification_date"
				alias="modification_date"
				label="BDS_FIELD_MODIFICATION_DATE"
				filter="USER_UTC"
				type="calendar"
				format="%Y-%m-%d %H:%M"
				todaybutton="true"
				weeknumbers="false"
				filltable="true"
				singleheader="false"
				minyear="-100"
				maxyear="+50"
				timeformat="24"/>

		<field name="created_by"
				alias="_created_by_name"
				label="BDS_FIELD_CREATED_BY"
				filter="INT"
				access="core.edit"
				listKey="id"
				labelKey="name"
				type="ckcombo"
				nullLabel="BDS_JSEARCH_SELECT_CREATED_BY"/>

		<field name="modified_by"
				alias="_modified_by_name"
				label="BDS_FIELD_MODIFIED_BY"
				filter="INT"
				listKey="id"
				labelKey="name"
				type="ckcombo"
				nullLabel="BDS_JSEARCH_SELECT_MODIFIED_BY"/>
	</fieldset>

	<fieldset name="default.filters" addfieldpath="/administrator/components/com_bds/models/fields">

		<field name="filter_main_location"
				listKey="id"
				labelKey="title"
				type="ckcombo"
				submit="true"
				nullLabel="BDS_FILTER_NULL_MAIN_LOCATION"
				class="span-2 element-filter"
				label="BDS_JSEARCH_MAIN_LOCATION"
				ui="chosen"/>

		<field name="filter_type_id"
				listKey="id"
				labelKey="title"
				type="ckcombo"
				submit="true"
				nullLabel="BDS_FILTER_NULL_TYPE"
				class="span-2 element-filter"
				label="BDS_JSEARCH_TYPE"
				ui="chosen"/>

		<field name="filter_utility_id"
				listKey="id"
				labelKey="title"
				type="ckcombo"
				submit="true"
				nullLabel="BDS_FILTER_NULL_UTILITY"
				class="span-2 element-filter"
				label="BDS_JSEARCH_UTILITY"
				ui="chosen"/>

		<field name="filter_handing_over"
				type="calendar"
				placeholder="BDS_FILTER_NULL_HANDING_OVER"
				format="%Y-%m-%d"
				filter="USER_UTC"
				todaybutton="true"
				weeknumbers="false"
				filltable="true"
				singleheader="false"
				minyear="-100"
				maxyear="+50"
				showtime="false"
				onchange="this.form.submit();"
				label="BDS_JSEARCH_HANDING_OVER"
				class="element-filter"
				ui="chosen"/>

		<field name="search_search"
				type="cksearch"
				placeholder="BDS_FILTER_NULL_TITLE_ALIAS_ADDRESS_INVESTOR"
				label="BDS_JSEARCH_TITLE_ALIAS_ADDRESS_INVESTOR"
				class="element-filter element-search search-query"
				ui="chosen"/>

		<field name="sortTable"
				type="cksort"
				responsive="hidden-phone"
				submit="true"
				nullLabel="JGLOBAL_SORT_BY"
				class="span-2 element-filter"
				label="Sort by"
				ui="chosen"/>

		<field name="directionTable"
				type="ckdirection"
				responsive="hidden-phone"
				submit="true"
				nullLabel="JFIELD_ORDERING_DESC"
				class="span-2 element-filter"
				label="Direction"
				ui="chosen"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>

	<fieldset name="modal.filters" addfieldpath="/administrator/components/com_bds/models/fields">

		<field name="limit"
				type="cklimit"
				submit="true"
				class="element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>
</form>