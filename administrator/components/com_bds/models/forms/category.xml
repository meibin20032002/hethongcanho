<?xml version="1.0" encoding="utf-8"?>


<form>

	<fieldset name="category.form" addfieldpath="/administrator/components/com_bds/models/fields">

		<field name="title"
				alias="title"
				label="BDS_FIELD_TITLE"
				filter="STRING"
				type="cktext"
				required="true"
				class="validate[required] input-xxlarge"/>

		<field name="alias"
				alias="alias"
				label="BDS_FIELD_ALIAS"
				filter="STRING"
				type="cktext"/>

		<field name="sub_category"
				alias="_sub_category_title"
				label="BDS_FIELD_SUB_CATEGORY"
				filter="INT"
				listKey="id"
				labelKey="title"
				type="ckcombo"
				nullLabel="BDS_JSEARCH_SELECT_SUB_CATEGORY"/>

		<field name="image"
				alias="image"
				label="BDS_FIELD_IMAGE"
				filter="STRING"
				type="media"/>

		<field name="description"
				alias="description"
				label="BDS_FIELD_DESCRIPTION"
				filter="JComponentHelper::filterText"
                buttons="true" 
				type="editor"/>

		<field name="published"
				alias="published"
				label="BDS_FIELD_PUBLISHED"
				filter="INT"
				access="core.edit.state"
				listKey="value"
				default="0"
				type="ckstate">
			<option value="0" icon="icomoon-cancel" color="danger">BDS_FIELDS_BOOL_NO</option>
			<option value="1" icon="icomoon-ok" color="success">BDS_FIELDS_BOOL_YES</option>
		</field>

		<field name="creation_date"
				alias="creation_date"
				label="BDS_FIELD_CREATION_DATE"
				filter="USER_UTC"
				type="calendar"
				format="%Y-%m-%d %H:%M"
				todaybutton="true"
				weeknumbers="false"
				filltable="true"
				singleheader="false"
				minyear="-100"
				maxyear="+50"
				timeformat="24"/>

		<field name="modification_date"
				alias="modification_date"
				label="BDS_FIELD_MODIFICATION_DATE"
				filter="USER_UTC"
				type="calendar"
				format="%Y-%m-%d %H:%M"
				todaybutton="true"
				weeknumbers="false"
				filltable="true"
				singleheader="false"
				minyear="-100"
				maxyear="+50"
				timeformat="24"/>

		<field name="created_by"
				alias="_created_by_name"
				label="BDS_FIELD_CREATED_BY"
				filter="INT"
				access="core.edit"
				listKey="id"
				labelKey="name"
				type="ckcombo"
				nullLabel="BDS_JSEARCH_SELECT_CREATED_BY"/>

		<field name="modified_by"
				alias="_modified_by_name"
				label="BDS_FIELD_MODIFIED_BY"
				filter="INT"
				listKey="id"
				labelKey="name"
				type="ckcombo"
				nullLabel="BDS_JSEARCH_SELECT_MODIFIED_BY"/>
	</fieldset>

	<fieldset name="default.filters" addfieldpath="/administrator/components/com_bds/models/fields">

		<field name="filter_sub_category"
				listKey="id"
				labelKey="title"
				type="ckcombo"
				submit="true"
				nullLabel="BDS_FILTER_NULL_SUB_CATEGORY"
				class="span-2 element-filter"
				label="BDS_JSEARCH_SUB_CATEGORY"
				ui="chosen"/>

		<field name="search_search"
				type="cksearch"
				placeholder="BDS_FILTER_NULL_TITLE_ALIAS_IMAGE"
				label="BDS_JSEARCH_TITLE_ALIAS_IMAGE"
				class="element-filter element-search search-query"
				ui="chosen"/>

		<field name="sortTable"
				type="cksort"
				responsive="hidden-phone"
				submit="true"
				nullLabel="JGLOBAL_SORT_BY"
				class="span-2 element-filter"
				label="Sort by"
				ui="chosen"/>

		<field name="directionTable"
				type="ckdirection"
				responsive="hidden-phone"
				submit="true"
				nullLabel="JFIELD_ORDERING_DESC"
				class="span-2 element-filter"
				label="Direction"
				ui="chosen"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>

	<fieldset name="modal.filters" addfieldpath="/administrator/components/com_bds/models/fields">

		<field name="limit"
				type="cklimit"
				submit="true"
				class="element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>
</form>