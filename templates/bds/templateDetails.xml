<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site">
	<name>bds</name>
	<version>1.0</version>
	<creationDate>17/12/2017</creationDate>
	<author>Meibin</author>
	<authorEmail>meibin20032002@gmail.com</authorEmail>
	<copyright>Copyright (C) 2005 - 2018 Open Source Matters, Inc. All rights reserved.</copyright>
	<description>Template by Meibin</description>
	<files>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>templateDetails.xml</filename>
		<folder>css</folder>
		<folder>fonts</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>

	</files>
	<positions>
        <position>top</position>
        <position>search</position>
        <position>header</position>
		<position>banner</position>
		<position>mobile-menu</position>
		<position>mainmenu</position>
		<position>slideshow</position>
        <position>breadcrumbs</position>
		<position>right</position>
        <position>content-top</position>
		<position>content-bottom</position>
		<position>bottom</position>
		<position>copyright</position>
        <position>footer-menu</position>        
		<position>footer</position>
		<position>debug</position>
		
	</positions>
	<config>
		<fields name="params">
			<fieldset name="advanced" description="Add custom code to some special positions of webpage.">
                <field name="logo" type="media" label="Logo"/>
				<field name="after_head" type="textarea" label="After &lt; head &gt;" filter="raw" />
				<field name="before_head" type="textarea" label="Before &lt; /head &gt;" filter="raw" />
				<field name="after_body" type="textarea" label="After &lt; body &gt;" filter="raw" />
				<field name="before_body" type="textarea" label="Before &lt; /body &gt;" filter="raw" />
			</fieldset>
		</fields>
	</config>
</extension>
