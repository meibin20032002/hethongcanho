<?xml version="1.0" encoding="utf-8"?>


<form>

	<fieldset name="post.form" addfieldpath="/administrator/components/com_bds/models/fields">

		<field name="title"
				alias="title"
				label="Tiêu đề"
				filter="STRING"
				type="text"
                hint="Tóm tắt ngắn gọn nội dung, dùng Tiếng Việt có dấu"
				required="true"
				class="validate[required]"/>

		<field name="alias"
				alias="alias"
				label="BDS_FIELD_ALIAS"
				filter="STRING"
				type="cktext"/>

		<field name="category_id"
				alias="_category_id_title"
				label="Loại bất động sản"
				filter="INT"
				listKey="id"
				labelKey="title"
				type="ckcombo"
				nullLabel="Chọn bất động sản"/>
                
        <field name="project_id"
				alias="_project_id_title"
				label="Thuộc dự án"
				filter="INT"
				listKey="id"
				labelKey="title"
				type="ckcombo"
				nullLabel="Chọn dự án"/>

		<field name="types"
				alias="_types_title"
				label="Chọn bất động sản"
				filter="INT"
				listKey="id"
				labelKey="title"
				type="ckcombo"
				required="true"
				class="validate[required]"/>

		<field name="who"
				alias="who"
				label="BDS_FIELD_WHO"
				filter="STRING"
				listKey="value"
				labelKey="text"
				type="enum"
				nullLabel="BDS_JSEARCH_SELECT_WHO"
				enum="products_who"/>

		<field name="main_location"
				alias="_main_location_title"
				label="Chọn Khu vực"
				filter="INT"
				listKey="id"
				labelKey="title"
				type="ckcombo"
				required="true"
                default="79"
				class="validate[required]"/>
                
        <field name="sub_location"
				alias="_sub_location_title"
				label="Quận/Huyện"
				filter="INT"
				listKey="id"
				labelKey="title"
				type="ckcombo"
				nullLabel="Chọn Quận/Huyện"/>

		<field name="gallery"
				alias="gallery"
				label="Đăng hình ảnh"
				filter="STRING"
				type="textarea"/>

		<field name="price"
				alias="price"
				label="Giá (đồng)"
				filter="INT"
				type="text"
                maxlength="12"
                hint="Giá không quá 1.000.000.000.000đ"
				validate="numeric"
				ruleInstance="numeric_6385"
				required="true"
				class="validate[required,custom[numeric_6385]]"/>

		<field name="bedrooms"
				alias="bedrooms"
				label="Số phòng"
				filter="STRING"
				listKey="value"
				labelKey="text"
				type="enum"
				nullLabel="Chọn Số phòng"
				enum="products_bedrooms"/>

		<field name="description"
				alias="description"
				label="Mô tả chi tiết"
                hint='Bổ sung đầy đủ thông tin bất động sản (địa chỉ, diện tích, giá cả). Vui lòng nhập Tiếng Việt có dấu.'
				filter="RAW"
				type="textarea"/>

		<field name="address"
				alias="address"
				label="Địa chỉ"
                hint="Số nhà, Đường, Phường, Quận/Huyện, Tỉnh/Thành"
				filter="STRING"
				type="text"/>

		<field name="acreage"
				alias="acreage"
				label="Diện tích (m2)"
				filter="INT"
				type="text"
                maxlength="4"
                hint="Diện tích không quá 10.000 m2"
				validate="numeric"
				ruleInstance="numeric_2524"
				required="true"
				class="validate[required,custom[numeric_2524]]"/>
                
        <field name="alley"
				alias="alley"
				label="Hẻm (m)"
                hint="Hẻm không quá 100 m"
				filter="INT"
                maxlength="2"
				type="text"
                default="0"
				validate="numeric"
				ruleInstance="numeric_1765"
				class="validate[custom[numeric_1765]]"/>

		<field name="direction"
				alias="direction"
				label="Hướng cửa chính"
				filter="STRING"
				listKey="value"
				labelKey="text"
				type="enum"
				nullLabel="Chọn Hướng"
				enum="products_direction"/>

		<field name="legal_documents"
				alias="legal_documents"
				label="Giấy tờ pháp lý"
				filter="STRING"
				listKey="value"
				labelKey="text"
				type="enum"
				nullLabel="Chọn Giấy tờ pháp lý"
				enum="products_legal_documents"/>

		<field name="characteristics"
				alias="characteristics"
				label="Đặc điểm nhà/đất"
				filter="STRING"
				listKey="value"
				labelKey="text"
				type="enum"
				nullLabel="Chọn Đặc điểm nhà/đất"
				enum="products_characteristics"/>

		<field name="shipping_payment"
				alias="shipping_payment"
				label="Vận chuyển, giao nhận"
				filter="STRING"
				type="cktextarea"/>

		<field name="contact_number"
				alias="contact_number"
				label="Số điện thoại"
                hint="Số di động"
				filter="STRING"
                readonly="true"
				type="text"/>

		<field name="contact_name"
				alias="contact_name"
				label="Họ tên"
                hint="Người liên hệ "
				filter="STRING"
				type="text"
				required="true"
				class="validate[required]"/>

		<field name="contact_email"
				alias="contact_email"
				label="Email"
				filter="STRING"
				type="text"
                hint="Email liên hệ "
				validate="ckemail"
				required="true"
				class="validate[required,custom[ckemail]]"/>

		<field name="contact_address"
				alias="contact_address"
				label="Địa chỉ"
                hint="Số nhà, Đường, Phường, Quận/Huyện, Tỉnh/Thành"
				filter="STRING"
				type="text"/>

		<field name="published"
				alias="published"
				label="BDS_FIELD_PUBLISHED"
				filter="INT"
				access="core.edit.state"
				listKey="value"
				default="0"
				type="ckstate">
			<option value="0" icon="icomoon-cancel" color="danger">BDS_FIELDS_BOOL_NO</option>
			<option value="1" icon="icomoon-ok" color="success">BDS_FIELDS_BOOL_YES</option>
		</field>

		<field name="creation_date"
				alias="creation_date"
				label="BDS_FIELD_CREATION_DATE"
				filter="USER_UTC"
				type="calendar"
				format="%Y-%m-%d %H:%M"
				todaybutton="true"
				weeknumbers="false"
				filltable="true"
				singleheader="false"
				minyear="-100"
				maxyear="+50"
				timeformat="24"/>

		<field name="created_by"
				alias="_created_by_name"
				label="BDS_FIELD_CREATED_BY"
				filter="INT"
				access="core.edit"
				listKey="id"
				labelKey="name"
				type="ckcombo"
				nullLabel="BDS_JSEARCH_SELECT_CREATED_BY"/>
	</fieldset>

	<fieldset name="default.filters" addfieldpath="/administrator/components/com_bds/models/fields">

		<field name="filter_main_location"
				listKey="id"
				labelKey="title"
				type="ckcombo"
				nullLabel="Toàn quốc"
				class="span-2 element-filter"
				label="BDS_JSEARCH_LOCATION"
				ui="chosen"/>
                
        <field name="filter_sub_location"
				listKey="id"
				labelKey="title"
				type="ckcombo"
				submit="true"
				nullLabel="Tất cả"
				class="span-2 element-filter"
				label="BDS_JSEARCH_LOCATION"
				ui="chosen"/>

		<field name="filter_category_id"
				listKey="id"
				labelKey="title"
				type="ckcombo"
				submit="true"
				nullLabel="Tất cả bất động sản"
				class="span-2 element-filter"
				label="BDS_JSEARCH_CATEGORY"
				ui="chosen"/>

		<field name="filter_types"
				listKey="value"
				labelKey="text"
				type="enum"
				submit="true"
				enum="products_types"
				label="BDS_JSEARCH_TYPE"
				class="element-filter"
				ui="chosen"/>

		<field name="filter_who"
				listKey="value"
				labelKey="text"
				type="enum"
				submit="true"
				nullLabel="Đăng bởi"
				enum="products_who"
				label="BDS_JSEARCH_WHO"
				class="element-filter"
				ui="chosen"/>
        
        <field name="filter_acreage"
				listKey="value"
				labelKey="text"
				type="enum"
				submit="true"
				nullLabel="Diện tích tổng"
				enum="products_acreage"
				label="BDS_JSEARCH_BEDROOMS"
				class="element-filter"
				ui="chosen"/>
                
        <field name="filter_price"
				listKey="value"
				labelKey="text"
				type="enum"
				submit="true"
				nullLabel="Chọn giá"
				enum="products_price"
				label="BDS_JSEARCH_BEDROOMS"
				class="element-filter"
				ui="chosen"/>
        
		<field name="filter_bedrooms"
				listKey="value"
				labelKey="text"
				type="enum"
				submit="true"
				nullLabel="Số phòng"
				enum="products_bedrooms"
				label="BDS_JSEARCH_BEDROOMS"
				class="element-filter"
				ui="chosen"/>

		<field name="filter_direction"
				listKey="value"
				labelKey="text"
				type="enum"
				submit="true"
				nullLabel="Hướng"
				enum="products_direction"
				label="BDS_JSEARCH_DIRECTION"
				class="element-filter"
				ui="chosen"/>
                
        <field name="filter_alley"
				listKey="value"
				labelKey="text"
				type="enum"
				submit="true"
				nullLabel="Hẻm"
				enum="products_alley"
				label="BDS_JSEARCH_ALLEY"
				class="element-filter"
				ui="chosen"/>

		<field name="filter_legal_documents"
				listKey="value"
				labelKey="text"
				type="enum"
				submit="true"
				nullLabel="Tài liệu hợp pháp"
				enum="products_legal_documents"
				label="BDS_JSEARCH_LEGAL_DOCUMENTS"
				class="element-filter"
				ui="chosen"/>

		<field name="filter_characteristics"
				listKey="value"
				labelKey="text"
				type="enum"
				submit="true"
				nullLabel="BDS_FILTER_NULL_CHARACTERISTICS"
				enum="products_characteristics"
				label="BDS_JSEARCH_CHARACTERISTICS"
				class="element-filter"
				ui="chosen"/>
                
		<field name="search_search"
				type="cksearch"
				placeholder="Tìm kiếm..."
				label="BDS_JSEARCH_TITLE_ALIAS_ADDRESS_CONTACT_NUMBER_CONTACT_NAME_CONTACT_ADDRESS"
				class="element-filter element-search search-query"
				ui="chosen"/>

		<field name="sortTable"
				type="cksort"
				responsive="hidden-phone"
				submit="true"
				class="span-2 element-filter"
				label="Sort by"
				ui="chosen"/>

		<field name="directionTable"
				type="ckdirection"
				responsive="hidden-phone"
				submit="true"
				nullLabel="JFIELD_ORDERING_DESC"
				class="span-2 element-filter"
				label="Direction"
				ui="chosen"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>

	<fieldset name="modal.filters" addfieldpath="/administrator/components/com_bds/models/fields">

		<field name="limit"
				type="cklimit"
				submit="true"
				class="element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>
</form>