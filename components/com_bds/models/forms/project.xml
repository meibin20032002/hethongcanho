<?xml version="1.0" encoding="utf-8"?>


<form>

	<fieldset name="default.filters" addfieldpath="/administrator/components/com_bds/models/fields">

		<field name="filter_main_location"
				listKey="id"
				labelKey="title"
				type="ckcombo"
				submit="true"
				nullLabel="Toàn quốc"
				class="span-2 element-filter"
				label="BDS_JSEARCH_LOCATION"
				ui="chosen"/>
                
        <field name="filter_sub_location"
				listKey="id"
				labelKey="title"
				type="ckcombo"
				submit="true"
				nullLabel="Sub Location"
				class="span-2 element-filter"
				label="BDS_JSEARCH_LOCATION"
				ui="chosen"/>

		<field name="filter_type_id"
				listKey="id"
				labelKey="title"
				type="ckcombo"
				submit="true"
				nullLabel="Loại hình dự án"
				class="span-2 element-filter"
				label="BDS_JSEARCH_TYPE"
				ui="chosen"/>
        <field name="filter_acreage"
				listKey="value"
				labelKey="text"
				type="enum"
				submit="true"
				nullLabel="Diện tích tổng"
				enum="products_acreage"
				label="BDS_JSEARCH_BEDROOMS"
				class="element-filter"
				ui="chosen"/>
                
        <field name="filter_price"
				listKey="value"
				labelKey="text"
				type="enum"
				submit="true"
				nullLabel="Chọn khoảng giá"
				enum="products_price"
				label="BDS_JSEARCH_BEDROOMS"
				class="element-filter"
				ui="chosen"/>
                
		<field name="filter_handing_over"
				type="calendar"
				placeholder="BDS_FILTER_NULL_HANDING_OVER"
				format="%Y-%m-%d"
				filter="USER_UTC"
				todaybutton="true"
				weeknumbers="false"
				filltable="true"
				singleheader="false"
				minyear="-100"
				maxyear="+50"
				showtime="false"
				onchange="this.form.submit();"
				label="BDS_JSEARCH_HANDING_OVER"
				class="element-filter"
				ui="chosen"/>

		<field name="search_search"
				type="cksearch"
				placeholder="Nhập tên dự án hoặc quận"
				label="BDS_JSEARCH_TITLE_ALIAS_ADDRESS_INVESTOR"
				class="element-filter element-search search-query"
				ui="chosen"/>

		<field name="sortTable"
				type="cksort"
				responsive="hidden-phone"
				submit="true"
				nullLabel="JGLOBAL_SORT_BY"
				class="span-2 element-filter"
				label="Sort by"
				ui="chosen"/>

		<field name="directionTable"
				type="ckdirection"
				responsive="hidden-phone"
				submit="true"
				nullLabel="JFIELD_ORDERING_DESC"
				class="span-2 element-filter"
				label="Direction"
				ui="chosen"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>

	<fieldset name="modal.filters" addfieldpath="/administrator/components/com_bds/models/fields">

		<field name="limit"
				type="cklimit"
				submit="true"
				class="element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>
</form>