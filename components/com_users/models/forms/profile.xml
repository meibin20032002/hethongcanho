<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="core" label="COM_USERS_PROFILE_DEFAULT_LABEL">
		<field
			name="id"
			type="hidden"
			filter="integer"
		/>

		<field
			name="name"
			type="text"
            label="COM_USERS_PROFILE_NAME_LABEL"
			hint="COM_USERS_PROFILE_NAME_LABEL"
			filter="string"
			required="true"
			size="30"
		/>

		<field
			name="username"
			type="text"
            label="COM_USERS_PROFILE_USERNAME_LABEL"
			hint="COM_USERS_PROFILE_USERNAME_LABEL"
			class="validate-username"
			filter="username"
			message="COM_USERS_PROFILE_USERNAME_MESSAGE"
			required="true"
			size="30"
			validate="username"
		/>

		<field
			name="password1"
			type="password"
            label="COM_USERS_PROFILE_PASSWORD1_LABEL"
			hint="COM_USERS_PROFILE_PASSWORD1_LABEL"
			autocomplete="off"
			class="validate-password"
			filter="raw"
			size="30"
			validate="password"
		/>

		<field
			name="password2"
			type="password"
            label="COM_USERS_PROFILE_PASSWORD2_LABEL"
			hint="COM_USERS_PROFILE_PASSWORD2_LABEL"
			autocomplete="off"
			class="validate-password"
			field="password1"
			filter="raw"
			message="COM_USERS_PROFILE_PASSWORD1_MESSAGE"
			size="30"
			validate="equals"
		/>

		<field
			name="email1"
			type="email"
			label="COM_USERS_PROFILE_EMAIL1_LABEL"
            hint="COM_USERS_PROFILE_EMAIL1_LABEL"
			filter="string"
			message="COM_USERS_PROFILE_EMAIL1_MESSAGE"
			required="true"
			size="30"
			unique="true"
			validate="email"
			autocomplete="email"
		/>

		<field
			name="email2"
			type="email"
            label="COM_USERS_PROFILE_EMAIL2_LABEL"
			hint="COM_USERS_PROFILE_EMAIL2_LABEL"
			field="email1"
			filter="string"
			message="COM_USERS_PROFILE_EMAIL2_MESSAGE"
			required="true"
			size="30"
			validate="equals"
		/>
	</fieldset>
	
	<!-- Used to get the two factor authentication configuration -->
	<field
		name="twofactor"
		type="hidden"
	/>
</form>